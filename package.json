{
    "name": "spotify-api",
    "version": "0.5.0",
    "main": "index.js",
    "scripts": {
        "compile": "tsc -p ./",
        "compile-start": "npm run compile && npm run start",
        "watch:compile": "tsc  -p ./ --watch",
        "test": "NODE_ENV=test mocha -r ts-node/register test/**/**/*.test.ts",
        "test:unit": "NODE_ENV=test mocha -r ts-node/register test/unit/**/*.test.ts",
        "test:integration": "NODE_ENV=test mocha -r ts-node/register test/integration/**/*.test.ts",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
        "start": "node dist/src/index.js"
    },
    "pre-commit": [
        "lint"
    ],
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.36.0",
        "@aws-sdk/util-dynamodb": "^3.37.0",
        "axios": "^0.21.1",
        "bluebird": "^3.7.2",
        "cookie-parser": "1.3.2",
        "cors": "^2.8.4",
        "express": "~4.16.0",
        "form-data": "^4.0.0",
        "lodash": "^4.17.15",
        "querystring": "~0.2.0",
        "request": "~2.83.0",
        "retry-axios": "^2.2.1",
        "uuid": "^8.0.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.30",
        "@types/chai": "^4.2.11",
        "@types/dirty-chai": "^2.0.2",
        "@types/lodash": "^4.14.151",
        "@types/mocha": "^7.0.2",
        "@types/node": "^17.0.2",
        "@types/sinon": "^9.0.0",
        "@types/sinon-chai": "^3.2.4",
        "@types/uuid": "^7.0.3",
        "chai": "^4.2.0",
        "dirty-chai": "^2.0.1",
        "mocha": "^8.0.0",
        "pre-commit": "^1.2.2",
        "request": "^2.88.2",
        "sinon": "^9.0.2",
        "sinon-chai": "^3.5.0",
        "ts-mock-imports": "^1.3.3",
        "ts-node": "^8.10.1",
        "ts-sinon": "^2.0.1",
        "tslint": "^6.1.2",
        "typescript": "^3.8.3"
    },
    "files": [
        "dist"
    ],
    "mocha": {
        "recursive": true,
        "ui": "bdd",
        "exit": true,
        "timeout": 60000,
        "require": "./test/mocha-opts"
    }
